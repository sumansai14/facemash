<div id="chatbox">
	<% if user_signed_in? -%>
		<% for user in User.all -%>
		<% if user.online? -%>
			<div class="row">
				<div class="span3"><%= user.profile.name %></div>
				<div class="span9">
					<ul id="chat">
						<%= render @messages %>
					</ul>
					<%= form_for Message.new, :remote=>true, :url => {:controller=>:messages,:action =>:create }  do |f| -%>
						
						    <%= f.label :Message %>
						    <%= f.text_field :content %>
						
						    <%= f.submit "Send" %>
					<% end -%>
				</div>
			</div>	
		<% end -%>		
	<% end -%>
	<% else -%>
	
	<% end -%>
</div>
